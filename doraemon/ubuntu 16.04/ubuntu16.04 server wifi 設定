sudo apt install wpasupplicant
sudo apt install wireless-tools

auto wlp3s0b1
iface wlp3s0b1 inet dhcp
        wpa-ssid <YOUR WIFI NETWORK NAME>
        wpa-psk <YOUR WIFI NETWORK PASSWORD>

sudo service networking restart

